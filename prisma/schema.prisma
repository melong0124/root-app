generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  assets       Asset[]
  accounts     Account[]
  transactions Transaction[]
}

enum AssetCategory {
  CASH
  STOCK
  PENSION
  REAL_ESTATE
  LOAN
  ESO
  RENTAL
}

model Asset {
  id        String          @id @default(uuid())
  name      String
  category  AssetCategory
  currency  String          @default("KRW")
  userId    String
  user      User            @relation(fields: [userId], references: [id])
  values    AssetValue[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([userId])
}

model AssetValue {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(20, 2)
  date      DateTime // Representative date for the month (e.g., 1st of the month)
  assetId   String
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([assetId, date])
  @@index([assetId])
  @@index([date])
}

model Account {
  id        String   @id @default(uuid())
  name      String
  type      String // ASSET, LIABILITY, EQUITY, REVENUE, EXPENSE
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  entries   Entry[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

model Transaction {
  id          String          @id @default(uuid())
  date        DateTime        @default(now())
  description String
  type        TransactionType @default(EXPENSE)
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  entries     Entry[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([userId])
}

model Entry {
  id            String      @id @default(uuid())
  amount        Decimal     @db.Decimal(20, 2) // Positive for Debit, Negative for Credit (or vice versa depending on account type)
  accountId     String
  account       Account     @relation(fields: [accountId], references: [id])
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([accountId])
  @@index([transactionId])
}
